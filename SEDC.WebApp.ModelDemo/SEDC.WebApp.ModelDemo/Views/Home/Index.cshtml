@model IEnumerable<SEDC.WebApp.ModelDemo.Models.Domain.Pizza>


<h1>@ViewBag.Title </h1>
<h2>@ViewData["Heading"] </h2>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Details", "PizzaDetails", new { id = item.Id }) |
                @Html.ActionLink("Put in order", "Order", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
